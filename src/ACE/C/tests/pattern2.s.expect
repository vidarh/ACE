	move.l	-4(a4),a0
	move.w	(sp)+,0(a0,d7.L)
	move.w	#1,-(sp)
	moveq	#0,d7
	move.w	(sp)+,d1
	ext.l	d1
	move.l	d1,-(sp)
	move.l	#1,-(sp)
	jsr	lmulu
	add.l	#8,sp
